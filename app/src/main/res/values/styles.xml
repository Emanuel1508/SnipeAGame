<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LargeTitleText">
        <item name="android:textSize">@dimen/size_40_text</item>
        <item name="android:textColor">@color/stroke_dark_green</item>
        <item name="android:fontFamily">@font/great_adventure</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumTitleText">
        <item name="android:textSize">@dimen/size_30_text</item>
        <item name="android:textColor">@color/stroke_dark_green</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileTitle">
        <item name="android:textSize">@dimen/size_24_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SmallTitleText">
        <item name="android:textSize">@dimen/size_18_text</item>
        <item name="android:textColor">@color/stroke_dark_green</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AlertTitleText">
        <item name="android:textSize">@dimen/size_24_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/great_adventure</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">@dimen/size_16_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="JournalText">
        <item name="android:textSize">@dimen/size_16_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ProfileText">
        <item name="android:textSize">@dimen/size_16_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">@dimen/size_20_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardAdditionalInfo">
        <item name="cardCornerRadius">@dimen/size_16</item>
        <item name="cardElevation">@dimen/size_16</item>
        <item name="contentPadding">@dimen/size_8</item>
        <item name="cardBackgroundColor">@color/info_card_green</item>
    </style>

    <style name="InputText">
        <item name="android:maxLines">1</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:background">@color/edit_text_focus</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
    </style>

    <style name="TextLayout">
        <item name="android:textSize">@dimen/size_16</item>
        <item name="hintTextColor">@color/theme_green</item>
        <item name="android:textColorHint">@color/inactive</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/inactive</item>
        <item name="android:colorError">@color/error_text_color</item>
    </style>

    <style name="ThemeButton">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:backgroundTint">@color/theme_green</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="RedButton">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:backgroundTint">@color/dark_red</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="WhiteButton">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="strokeWidth">@dimen/size_1</item>
        <item name="strokeColor">@color/inactive</item>
        <item name="android:textColor">@color/stroke_dark_green</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="UnderlinedLargeText">
        <item name="android:textSize">@dimen/size_20_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <style name="AlertPositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/stroke_dark_green</item>
        <item name="android:textSize">@dimen/size_20_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AlertNegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/size_20_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RegisterPrivacyText">
        <item name="android:textColorLink">@color/teal</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="Toolbar">
        <item name="background">@color/theme_green</item>
        <item name="theme">?attr/actionBarTheme</item>
        <item name="titleTextColor">@color/transparent</item>
    </style>
</resources>