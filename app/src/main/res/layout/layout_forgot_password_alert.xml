<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/edit_text_focus"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alertTitle_textView"
        style="@style/AlertTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_8"
        android:text="@string/change_password" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_inputTextLayout"
        style="@style/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        android:hint="@string/introduce_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_inputText"
            style="@style/InputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/button_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alert_negativeButton"
            style="@style/AlertNegativeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_8"
            android:text="@string/cancel_button" />

        <Button
            android:id="@+id/alert_positiveButton"
            style="@style/AlertPositiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_8"
            android:text="@string/submit" />

    </LinearLayout>
</LinearLayout>